<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CardView"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#FFFFFF"

    app:cardCornerRadius="30dp"
    app:cardElevation="50dp"
    app:cardMaxElevation="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/fundopapelamassadobranco"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewNomeTarefa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewPrioridade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageViewTarefa"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

            <Button
                android:id="@+id/buttonCheck"
                style="eleva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Check"

                app:elevation="200dp"
                app:icon="@drawable/ic_baseline_checkpequeno" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>